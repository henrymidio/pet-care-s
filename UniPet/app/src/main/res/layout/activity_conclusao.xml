<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mobtime.henrique.com.br.unipet.MedicoProfile">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageView4"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/people" />

        <com.pkmmte.view.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/ivAnimalFoto"
            app:border="true"
            android:src="@drawable/logo"
            android:layout_marginTop="84dp"
            android:layout_below="@+id/textView15"
            android:layout_alignRight="@+id/textView14"
            android:layout_alignEnd="@+id/textView14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvMarca"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ivAnimalFoto"
            android:text="Pet Care&apos;s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="petcares@gmail.com"
            android:id="@+id/textView60"
            android:layout_below="@+id/tvMarca"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Você receberá um email para a confirmação do pagamento"
            android:id="@+id/tvFrase"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_below="@+id/textView60"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total: R$150,00"
            android:id="@+id/textView14"
            android:layout_marginTop="33dp"
            android:textAlignment="center"
            android:layout_below="@+id/tvFrase"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Obrigado por usar o Pet Care&apos;s!"
            android:id="@+id/textView15"
            android:textStyle="italic"
            android:layout_marginTop="61dp"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

    </RelativeLayout>

</ScrollView>